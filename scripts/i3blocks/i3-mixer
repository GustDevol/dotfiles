#!/bin/bash

[ $# -eq 0 ] && device='spk' || device=$1
change_level=3

case $BLOCK_BUTTON in
    3)
	$($TERMINAL -e alsamixer)
    ;;
    1)
	$(audioctl -m $device)
    ;;
    4)
	$(audioctl -i $device $change_level)
    ;;
    5)
	$(audioctl -d $device $change_level)
    ;;
    *)
    ;;
esac

mute_status=$(audioctl -mst $device | cut -d ' ' -f2)
volume=$(audioctl -v $device)%
    
if [ $mute_status == 'yes' ]; then
    # [ $device == 'spk' ] && echo 'ï¢‰'$volume || echo 'ï„±'$volume
    [ $device == 'spk' ] && echo 'ðŸ”‡ '$volume || echo 'ðŸ“µ '$volume
    echo ''
    echo '#FF0000'
else
    # [ $device == 'spk' ] && echo 'ï¢†'$volume || echo 'ï„°'$volume
    [ $device == 'spk' ] && echo 'ðŸ”Š '$volume || echo 'ðŸŽ¤ '$volume
    echo ''
    echo '#FF8800'
fi
