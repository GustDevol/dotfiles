# remove title bars by uncommenting the following lines
for_window [class="^.*"] border pixel 0
new_window 1pixel

# Remove edge borders
# hide_edge_borders both 

client.focused #859900 #00ffaa #000000 #859900

# i3 Gaps
# =======
hide_edge_borders smart_no_gaps

# Activate smart borders (always)
smart_borders on

# Activate smart borders (only when there are effectively no gaps)
smart_borders no_gaps

# Only enable gaps on a workspace when there is at least one container
smart_gaps on

# Only enable outer gaps when there is exactly one container
smart_gaps inverse_outer

set $mode_gaps Gaps: (g) gaps, (n) no gaps, (o) outer, (i) inner
set $mode_gaps_outer Outer Gaps: k|j|0 (global), Shift + k|j|0 (local)
set $mode_gaps_inner Inner Gaps: k|j|0 (global), Shift + k|j|0 (local)
bindsym $mod+shift+t mode "$mode_gaps"

mode "$mode_gaps" {
        bindsym g      gaps inner all set 6; gaps outer all set 2
        bindsym n      gaps inner all set 0; gaps outer all set 0
        bindsym o      mode "$mode_gaps_outer"
        bindsym i      mode "$mode_gaps_inner"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

mode "$mode_gaps_inner" {
        bindsym k gaps inner all plus 5
        bindsym j gaps inner all minus 5
        bindsym 0 gaps inner all set 0

        bindsym Shift+k gaps inner current plus 5
        bindsym Shift+j gaps inner current minus 5
        bindsym Shift+0 gaps inner current set 0

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

mode "$mode_gaps_outer" {
        bindsym k gaps outer all plus 5
        bindsym j gaps outer all minus 5
        bindsym 0 gaps outer all set 0

        bindsym Shift+k gaps outer current plus 5
        bindsym Shift+j gaps outer current minus 5
        bindsym Shift+0 gaps outer current set 0

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# Logout
bindsym $mod+x exec prompt 'Wanna quit i3wm?' "i3-msg exit"

exec_always "pgrep -x xbindkeys > /dev/null || xbindkeys"
exec_always "sh $HOME/.config/X11/xprofile"

